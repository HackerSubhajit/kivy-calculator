<Calculator>:
    id: calculator
    display: label
    
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: label
            
            canvas.before: 
                Color: 
                    rgb: .13, .17, .18, 1
                Rectangle: 
                    pos: self.pos 
                    size: self.size
            
            halign: 'right'
            valign: 'center'
            font_size: 88
            italic: True
            text_size: 550, None
            size_hint: 1, .55
            
        GridLayout:
            cols: 4
            spacing: 1
            
            canvas.before: 
                Color: 
                    rgb: .3, .34, .36, 1
                Rectangle: 
                    pos: self.pos 
                    size: self.size
            
            Button:
                text: '('
                font_size: 33
                background_normal: ''
                background_color: .2, .24, .26, 1
                on_press: label.text += self.text
                
            Button:
                text: ')'
                font_size: 33
                background_normal: ''
                background_color: .2, .24, .26, 1
                on_press: label.text += self.text
                
            Button:
                text: '%'
                font_size: 33
                background_normal: ''
                background_color: .2, .24, .26, 1
                on_press: label.text += self.text
                
            GridLayout:
                rows: 2
                spacing: 1
                
                Button:
                    text: 'CE'
                    font_size: 33
                    background_normal: ''
                    background_color: .2, .24, .26, 1
                    on_press: calculator.delete(label.text)
                    
                Button:
                    text: 'C'
                    font_size: 33
                    background_normal: ''
